@{
    ViewData["Title"] = "Privacy Policy";
}


<form method="post" action="/Home/eventadd">
    <div class="footer">
        <div class="container">
            <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">Ürituse nimi:</label>
                <div class="col-sm-3">
                    <input type="text" placeholder="" name="name" id="name" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="aeg" class="col-sm-2 col-form-label">Aeg:</label>
                <div class="col-sm-3">
                    <input type="datetime-local" name="time" id="aeg" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="koht" class="col-sm-2 col-form-label">Koht:</label>
                <div class="col-sm-3">
                    <input type="text" placeholder="" name="place" id="koht" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="lisainfo" class="col-sm-2 col-form-label">Lisainfo:</label>
                <div class="col-sm-3">
                    <input type="text" placeholder="" name="additionalinfo" id="lisainfo" required>
                </div>
            </div>
            <hr>
            <button type="submit">Tagasi</button>
            <button type="submit" class="lisa">lisa</button>
        </div>
    </div>
</form>


