@{
    ViewData["Title"] = "";
}

<div class="tekst">
    <div class="row">
        <div class="col-2 align-items-center text-align-center d-flex" id="picturetext">
            <p>Ürituse lisamine</p>
        </div>
        <div class="col-10">
            <img class="picture" src="~/css/libled.jpg">
        </div>
    </div>
</div>


<div class="formdesign">
    <form method="post" action="/Home/eventadd">
        <div class="container">
            <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">Ürituse nimi:</label>
                <div class="col-sm-3">
                    <input type="text" placeholder="" name="name" id="name" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="aeg" class="col-sm-2 col-form-label">Aeg:</label>
                <div class="col-sm-3">
                    <!--Datetime formaat on teistsugune ehk tuleb convertida õigesse formaati, et min suudaks seda lugeda.-->
                    <input type="datetime-local" min="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" name="time" id="aeg" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="koht" class="col-sm-2 col-form-label">Koht:</label>
                <div class="col-sm-3">
                    <input type="text" placeholder="" name="place" id="koht" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="lisainfo" class="col-sm-2 col-form-label">Lisainfo:</label>
                <div class="col-sm-3">
                    <input type="text" placeholder="" name="additionalinfo" id="lisainfo" required>
                </div>
                <hr>
            </div>
            <button type="submit" class="lisa">lisa</button>
        </div>
    </form>
